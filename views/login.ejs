<body>
    

    <div class="login-wrapper">
            <div class="login">
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label>User ID</label>
                        <input type="text" name="userId" class="form-control" placeholder="Enter your User ID" required/>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Password" required/>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg d-block">Login</button>
                    <a href="/signup" class="text-info d-block">New User, Sign UP</a>
                </form>    
            </div>    
    </div>


